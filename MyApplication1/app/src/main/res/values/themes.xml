<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hsbc_fx_primary</item>
        <item name="colorPrimaryDark">@color/hsbc_fx_lightslate</item>
        <item name="colorAccent">@color/hsbc_fx_lightgray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="HSBCSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">#018580</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#A7A7A7
        </item>

        <!-- inactive track color (30% transparency) -->
        <!--<item name="android:colorForeground">@color/hsbc_fx_text
         </item>-->
    </style>

    <style name="AppTheme.NoActionBar.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.BlurBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
